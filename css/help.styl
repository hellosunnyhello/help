@import "reset.css"
@media screen and ( min-width: 992px )
  #help-wrap
    .help-content
      width 90%
@media screen and ( max-width: 991px )
  #help-wrap
    .help-content
      width 100%
#help-wrap
  width 100%
  font-size 14px
  /*background-color #eee*/
  .help-content
    .left-nav
      background #fff
      margin-top 3%
      background-clip content-box
      .directory
        padding 10px 10px
        .title
          font-size 20px
          margin-bottom 10px
        .nav-list
          .nav-item
            margin-bottom 10px
            &.active
              color #6481c5
            &:last-child
              margin-bottom 0
            &>img
              width 25px
              vertical-align middle
            &>span
              margin-left 20px
    .right-content
      margin 3% 0
      background #fff
      background-clip content-box
      .content-list
        padding 20px 20px
        .content-item
          margin-bottom 20px
          &:last-child
            margin-bottom 0
          .ask
            display flex
            justify-content space-between
            padding 10px 0
            border-bottom 1px solid #eee
            .icon
              transition all .5s
              &.close
                transform rotate(90deg)
          .answer
            >p
              padding 10px 0
              color #666
            .hasImg
              width 60%
              margin 0 auto
              .img-content
                text-align center
                margin-bottom 30px
                &:last-child
                  margin-bottom 0
